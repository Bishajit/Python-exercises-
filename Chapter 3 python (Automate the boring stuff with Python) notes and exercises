#running the hellofunc.py program from chap 3
def hello():
    print('Howdy!')
    print('Howdy!!!')
    print('Hello there.')

hello()
hello()
hello()

#running sameName.py
def spam():
    eggs = 'spam local'
    print(eggs) # prints 'spam local'

def bacon():

    eggs = 'bacon local'
    print(eggs) # prints 'bacon local'
    spam()
    print(eggs) # prints 'bacon local'

eggs = 'global'
bacon()
print(eggs) # prints 'global'


